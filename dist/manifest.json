{
    "name": "Watch Doge",
    "description": "An extension that reminds you of upcoming episodes of your favorite tv shows.",
    "version": "0.2",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": {
            "19": "assets/favicon-19_2.png",
            "38": "assets/favicon-38_2.png"
        },
        "default_title": "Watch Doge",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "permissions": [
        "background",
        "contextMenus",
        "storage",
        "unlimitedStorage"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}