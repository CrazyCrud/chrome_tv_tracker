{
    "name": "Watch Doge",
    "description": "An extension that keeps track of episodes of your favorite tv shows you have watched and which reminds you of upcoming episodes, too.",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": {
            "19": "assets/favicon-19_2.png",
            "38": "assets/favicon-38_2.png"
        },
        "default_title": "Watch Doge",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "assets/favicon-16.png",
        "48": "assets/favicon-48.png",
        "128": "assets/favicon-128.png"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "permissions": [
        "contextMenus",
        "storage",
        "unlimitedStorage"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}