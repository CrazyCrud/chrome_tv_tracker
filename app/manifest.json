{
  "name": "Watch' Next",
  "description": "An extension that reminds you of upcoming episodes of your favorite tv shows.",
  "version": "0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": {                   
      "19": "assets/favicon-19.png",          
      "38": "assets/favicon-38.png"           
    },
    "default_title": "Watch' Next",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "alarms",
    "background",
    "contextMenus",
    "notifications",
    "storage",
    "unlimitedStorage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}